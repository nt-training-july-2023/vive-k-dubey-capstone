package com.backend.employee.controller;

import com.backend.employee.dto.RegisterDto;
import com.backend.employee.dto.ResponseDto;
import com.backend.employee.service.AdminService;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@CrossOrigin(origins = "http://localhost:3000")
@RestController
@RequestMapping("/employee")
public class AdminController {

    private final AdminService addEmployeeService;

    @Autowired
    public AdminController(AdminService addEmployeeService) {
        this.addEmployeeService = addEmployeeService;
    }

    @PostMapping("/add")
    public ResponseDto<RegisterDto> addEmployee(@RequestBody RegisterDto registerDto) {
        return addEmployeeService.addEmployee(registerDto);
    }
    
     
    @GetMapping("/getAllEmployees")
    public ResponseDto<RegisterDto> getAllEmployees() {
        return addEmployeeService.getAllEmployees();
    }
    
    // testing code
    @GetMapping("/getAllManagers")
    public ResponseDto<RegisterDto> getAllManagers() {
        return addEmployeeService.getAllManagers();
    }
    
}

